if bool "${HOOK_SW_NOTIFY}"; then
	set --
	if tinynotify-send --help | grep action >/dev/null 2>&1; then
		if [ ${RET} -eq 0 ] && pumount --version >/dev/null 2>&1; then
			set -- "${@}" -a "Remount:uam-pmount ${DEVPATH}"
		fi
	fi

	sw-notify-send \
		-i drive-removable-media \
		"${@}" -- \
		"${MOUNTPOINT##*/} removed" \
		"${DEVPATH} ${SUMMARY}"
fi
